<div>
  <h1> Create New Account </h1>

  <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
        <div id="error">
          <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <p>
      <%= f.label :first_name  %> :
      <%= f.text_field :first_name %>
      </p>
      <p>
      <%= f.label :last_name  %> :
      <%= f.text_field :last_name %>
      </p>
      <p>
      <%= f.label :email %> :
      <%= f.email_field :email %>
      </p>
      <p>
      <%= f.label :password %> :
      <%= f.password_field :password %>
      </p>
      <p>
      <%= f.submit "Create an account", class: "btn btn-primary" %>
      </p>
  <%end%>
</div>
